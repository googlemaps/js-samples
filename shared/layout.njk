{% macro css() %}
{% if mode == "iframe" or mode == "github" %}
  <link rel="stylesheet" type="text/css" href="./style.css" data-inline>
{% elif mode == "dev" %}
  <link rel="stylesheet" type="text/css" href="./style.css">
{% else %}
  <link rel="stylesheet" type="text/css" href="./style.css" data-inline>
{% endif %}
{% endmacro %}  

{% macro js() %}
{% if mode == "iframe" or mode == "github" %}
  <script src="./iframe.js" data-inline></script>
{% elif mode == "dev" %}
  <script src="./index.js"></script>
{% else %}
  <script src="./index.js" data-inline></script>
{% endif %}
{% endmacro %}  

{% macro channel() -%}
  {%- if mode == "iframe" -%}
    &channel=1
  {%- elif mode == "jsfiddle" -%}
    &channel=2
  {%- elif mode == "dev" -%}
    &channel=3
  {%- endif %}
{% endmacro %}  

{% if mode == "iframe" %}
{% else %}
  <!-- [START maps_{{tag}}] -->
  <!DOCTYPE html>
  <html>
    <head>
    <title>{{ title }}</title>
{% endif %}
    {% block polyfill %}<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>{% endblock %}
    {% block external %}{% endblock %}   
    {% block resources %}
    {% if mode == "jsfiddle" %}
      <!-- jsFiddle will insert css and js -->
    {% else %}
      {% if css %}{{ css() }}{% endif%}
      {% if js %}{{ js() }}{% endif%}
    {% endif %}
    {% endblock %}
    {% if mode != "iframe" %}
    </head>
    <body>
    {% endif %}

    {% if mode == "iframe" %}
      <div id="iframe-contents">
    {% endif %}

    {% block html %}{% endblock %}

    {% block api %}
      <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
      <script 
        src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback={{ callback }}&libraries={{ libraries }}&v={{ version }}{% if language %}&language={{ language }}{% endif %}{% if region %}&region={{ region }}{% endif %}{{ channel() }}" 
        async></script>
    {% endblock %}

    {% if mode == "iframe" %}
      </div>
    {% else %}     
    </body>
  </html>
  <!-- [END maps_{{tag}}] -->
{% endif %}
